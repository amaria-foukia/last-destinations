{% extends 'admin/base.html.twig' %}

{% block title %}Modification des réservations
	{{booking.id}}
{% endblock %}


{% block body %}

	<div class="container">
		<h1 class="my-5">Modifier les réservations de
			{{ booking.booker.fullName }}
		</h1>

		<div class="alert alert-info">
			<strong>Annonce liée :
			</strong>
			{{booking.ad.title}}<br>
			<strong>Auteur :
			</strong>
			{{booking.booker.fullName}}<br>
			<strong>Date de création :
			</strong>
			{{booking.createdAt|date('d/m/Y H:i')}}
			<br>
		</div>

		{{ form_start(form) }}

		{{ form_widget(form) }}

		<button type="submit" class="btn btn-primary">
			Modifier la réservation
		</button>

		{{ form_end(form) }}
	</div>

{% endblock %}




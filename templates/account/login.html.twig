{% extends 'base.html.twig' %}

{% block title %}
	Connexion au site
{% endblock %}

{% block body %}

	<div class="container">

		<div class="row">

			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light py-3 px-3">
					<h3>Connectez vous !</h3>
					{% if hasError %}
						<div class="alert alert-danger">L'identifiant ou le mot de passe sont incorrectes</div>

					{% endif %}
					<form action="{{path('account_login')}}" method="POST">

						<div class="form-group">
							<label for="email">Email</label>
							<input class="form-control" id="email" name="_username" placeholder="Votre Email ..." type="text" value="{{username}}" required/>
						</div>
						<div class="form-group">
							<label for="password">Mot de passe</label>
							<input class="form-control" id="password" name="_password" placeholder="Votre mot de passe ..." type="password" required/>
						</div>
						<div class="form-group">
							<button class="btn btn-success" type="submit">Connexion !</button>
						</div>

					</form>
				</div>
			</div>
		</div>

	</div>

</div>{% endblock %}
